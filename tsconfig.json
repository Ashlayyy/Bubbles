{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["shared/src/*"],
			"@shared/types": ["shared/src/types/index"],
			"@shared/queue": ["shared/src/queue/index"],
			"@shared/utils": ["shared/src/utils/*"],
			"@bot/*": ["bot/src/*"],
			"@api/*": ["api/src/*"]
		}
	},
	"include": [],
	"exclude": ["node_modules", "**/node_modules", "**/dist", "**/build"],
	"references": [
		{ "path": "./shared" },
		{ "path": "./bot" },
		{ "path": "./api" }
	]
}
