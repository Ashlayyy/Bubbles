{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@shared/database": ["shared/src/database"],
      "@shared/types": ["shared/src/types/index"],
      "@shared/queue": ["shared/src/queue/index"],
      "@shared/utils/*": ["shared/src/utils/*"]
    }
  },
  "include": ["src/**/*", "shard.ts"],
  "exclude": ["node_modules", "build"],
  "references": [{ "path": "../shared" }]
}
