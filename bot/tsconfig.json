{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@shared/types": ["shared/src/types/index"],
      "@shared/queue": ["shared/src/queue/index"],
      "@shared/utils/*": ["shared/src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
