{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"declaration": false,
		"sourceMap": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["../shared/dist/*"],
			"@shared/database": ["../shared/dist/database"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
