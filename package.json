{
	"name": "bubbles-discord-bot",
	"version": "1.0.0",
	"description": "Discord bot microservices monorepo",
	"type": "module",
	"private": true,
	"workspaces": [
		"shared",
		"bot",
		"api",
		"frontend"
	],
	"scripts": {
		"dev": "concurrently -n \"API,Frontend\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:api\" \"npm run dev:frontend\"",
		"dev:full": "concurrently -n \"API,Frontend,Bot\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run dev:api\" \"npm run dev:frontend\" \"npm run dev:bot\"",
		"build": "npm run build:shared && npm run build:api && npm run build:frontend",
		"build:shared": "cd shared && npm run setup",
		"build:bot": "cd bot && npm run build",
		"build:api": "cd api && npm run build",
		"build:frontend": "cd frontend && npm run build",
		"dev:shared": "cd shared && npm run dev",
		"dev:bot": "cd bot && npm run dev",
		"dev:api": "cd api && npm run dev",
		"dev:frontend": "cd frontend && npm run dev",
		"db:generate": "cd shared && npm run db:generate",
		"db:push": "cd shared && npm run db:push",
		"db:studio": "cd shared && npm run db:studio",
		"start": "npm run start:bot",
		"start:bot": "cd bot && npm start",
		"start:api": "cd api && npm start",
		"clean": "npm run clean:shared && npm run clean:bot && npm run clean:api && npm run clean:frontend",
		"clean:shared": "cd shared && rimraf dist",
		"clean:bot": "cd bot && rimraf dist",
		"clean:api": "cd api && rimraf dist",
		"clean:frontend": "cd frontend && rimraf dist",
		"install:all": "npm install && npm run install:shared && npm run install:bot && npm run install:api && npm run install:frontend",
		"install:shared": "cd shared && npm install",
		"install:bot": "cd bot && npm install",
		"install:api": "cd api && npm install",
		"install:frontend": "cd frontend && npm install",
		"typecheck": "tsc --noEmit",
		"typecheck:all": "npm run typecheck:shared && npm run typecheck:bot && npm run typecheck:api && npm run typecheck:frontend",
		"typecheck:shared": "cd shared && npm run build",
		"typecheck:bot": "cd bot && npx tsc --noEmit",
		"typecheck:api": "cd api && npx tsc --noEmit",
		"typecheck:frontend": "cd frontend && npx tsc --noEmit",
		"dev:metrics": "echo \"Start Prometheus with ./prometheus.yml\"",
		"audit": "npm audit --audit-level=high",
		"audit:all": "npm run audit:root && npm run audit:shared && npm run audit:bot && npm run audit:api && npm run audit:frontend",
		"audit:root": "npm audit --audit-level=high",
		"audit:shared": "cd shared && npm audit --audit-level=high",
		"audit:bot": "cd bot && npm audit --audit-level=high",
		"audit:api": "cd api && npm audit --audit-level=high",
		"audit:frontend": "cd frontend && npm audit --audit-level=high",
		"audit:fix": "npm run audit:fix:root && npm run audit:fix:shared && npm run audit:fix:bot && npm run audit:fix:api && npm run audit:fix:frontend",
		"audit:fix:root": "npm audit fix",
		"audit:fix:shared": "cd shared && npm audit fix",
		"audit:fix:bot": "cd bot && npm audit fix",
		"audit:fix:api": "cd api && npm audit fix",
		"audit:fix:frontend": "cd frontend && npm audit fix",
		"audit:production": "npm run audit:production:root && npm run audit:production:shared && npm run audit:production:bot && npm run audit:production:api && npm run audit:production:frontend",
		"audit:production:root": "npm audit --production --audit-level=high",
		"audit:production:shared": "cd shared && npm audit --production --audit-level=high",
		"audit:production:bot": "cd bot && npm audit --production --audit-level=high",
		"audit:production:api": "cd api && npm audit --production --audit-level=high",
		"audit:production:frontend": "cd frontend && npm audit --production --audit-level=high"
	},
	"devDependencies": {
		"@types/express-session": "^1.18.2",
		"concurrently": "^8.2.2",
		"typescript": "^5.3.3",
		"openapi-typescript": "^6.7.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jsonwebtoken": "^9.0.10",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.1",
		"helmet": "^8.1.0",
		"joi": "^17.13.3",
		"rimraf": "^6.0.1",
		"rm": "^0.1.8",
		"prom-client": "^14.2.0",
		"envalid": "^8.0.0",
		"jose": "^5.2.0"
	}
}
