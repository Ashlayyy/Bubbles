{
	"name": "bubbles-discord-bot",
	"version": "1.0.0",
	"description": "Discord bot microservices monorepo",
	"type": "module",
	"private": true,
	"workspaces": [
		"shared",
		"bot",
		"api",
		"frontend"
	],
	"scripts": {
		"build": "npm run build:shared && npm run build:bot && npm run build:api",
		"build:shared": "cd shared && npm run build",
		"build:bot": "cd bot && npm run build",
		"build:api": "cd api && npm run build",
		"dev": "concurrently \"npm run dev:shared\" \"npm run dev:bot\" \"npm run dev:api\"",
		"dev:shared": "cd shared && npm run dev",
		"dev:bot": "cd bot && npm run dev",
		"dev:api": "cd api && npm run dev",
		"start": "npm run start:bot",
		"start:bot": "cd bot && npm start",
		"start:api": "cd api && npm start",
		"clean": "npm run clean:shared && npm run clean:bot && npm run clean:api",
		"clean:shared": "cd shared && rm -rf dist",
		"clean:bot": "cd bot && rm -rf dist",
		"clean:api": "cd api && rm -rf dist",
		"install:all": "npm install && npm run install:shared && npm run install:bot && npm run install:api",
		"install:shared": "cd shared && npm install",
		"install:bot": "cd bot && npm install",
		"install:api": "cd api && npm install",
		"typecheck": "tsc --noEmit",
		"typecheck:all": "npm run typecheck:shared && npm run typecheck:bot && npm run typecheck:api",
		"typecheck:shared": "cd shared && npm run build",
		"typecheck:bot": "cd bot && npx tsc --noEmit",
		"typecheck:api": "cd api && npx tsc --noEmit"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
